<% provide(:title, @note.title) %>

<h1><%= @note.title %></h1>


<div class="row">
  <div class="col-md-8 offset-md-2">
    <p class="note_timestamp"><%= @note.created_at.strftime("%Y-%m-%d %H:%M") %></p>
    <p><%= simple_format @note.text %></p>
  </div>
  <div class="col-md-3 offset-md-7">
    <span class="back"><%= link_to "ユーザーページに戻る", user_path(id: @note.user.id) %></span>
  </div>
</div>