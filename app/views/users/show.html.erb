<% provide(:title, @user.name) %>
<div class="row">
  <div class="col-md-4">
    <section class="user-name">
      <h3><%= @user.field %></h3>
      <p>@ <%= @user.name %></p>
      <p>登録日: <%= @user.created_at.strftime("%Y-%m-%d") %> </p>
    </section>
  </div>
  <div class="col-md-8">
   <p><%= simple_format @user.introduction %></p>
   <% if current_user.admin? %>
     <p>
       <%= link_to "管理画面へ", "/admin" %>
     </p>
   <% end %>
  </div>
  <div class="col-md-10 offset-md-1">
    <nav class="nav navbar-expand-md navbar-ligth bg-ligth">
      <ul class="navbar-nav">
        <li class="nav-item"><%= link_to "小説", "#user_novels", class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "本棚", "#user_favorites", class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "近況ノート", "#user_notes", class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "おすすめレビュー", "#user_reviews", class: "nav-link" %></li>
      </ul>
    </nav>
  </div>
  <div class="col-md-10 offset-md-1">
    <section id="user_novels">
      <% if @user.novels.any? %>
        <h3>小説 (<%= @user.novels.count %>)</h3>
        <ul class="novels"><%= render @novels %></ul>
        <%= will_paginate @novels %>
      <% end %>
    </section>
    <section id="user_favorites">
      <% if @user.favorites.any? %>
        <h3>本棚 (<%= @user.favorites.count %>)</h3>
        <ul class="favorites"><%= render @favorites %></ul>
        <%= will_paginate @favorites %>
      <% end %>
    </section>
    <section id="user_notes">
      <% if @user.notes.any? %>
        <h3>近況ノート (<%= @user.notes.count %>)</h3>
        <ul class="notes"><%= render @notes %></ul>
        <%= will_paginate @notes %>
      <% end %>
    </section>
    <section id="user_reviews">
      <% if @user.reviews.any? %>
        <h3>おすすめレビュー (<%= @user.reviews.count %>)</h3>
        <ul class="review_novel">
          <% @reviews.each do |review| %>
            <li>
              <div class="row">
                <div class="col-md-4">
                  <span class="novel_title"><%= link_to review.novel.title, review.novel %></span>
                  <span class="novel_user">著者名: <%= link_to review.novel.user.field, review.novel.user %></span>
                  <section class="novel_information">
                    <p>ジャンル: <%= review.novel.genre.name %></p>
                    <span class="update_date">更新日: <%= review.novel.updated_at.strftime("%Y-%m-%d %H:%M") %></span>
                    <span class="fas fa-book" area-hidden="true"></span><%= review.novel.favorites.count %>
                  </section>
                </div>
                <div class="col-md-6 offset-md-1">
  　　　           　<span class="review_title_name"><%= review.title %></span>      
                  <span class="review_user">  <%= link_to review.user.field, review.user %></span>
                  <span class="review_text_field"><%= simple_format review.text %></span>
                  <% if current_user == review.user %>
                    <span class="edit_delete"><%= link_to "編集", edit_novel_review_path(review.novel.id, review.id) %> | <%= link_to "削除",
                                                                                                         novel_review_path(review.novel.id, review.id),
                                                                                                         method: :delete,
                                                                                                         data: { confirm: "本当によろしいですか？" } %></span>
                  <% end %>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
        <%= will_paginate @reviews %>
      <% end %>
    </section>
  </div>
</div>
