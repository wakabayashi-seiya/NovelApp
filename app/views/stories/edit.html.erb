<% provide(:title, "エピソード編集") %>

<h1>エピソード編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@story, url: novel_story_path, method: :patch) do |f| %>
      <%= render 'shared/error_explanation', model: f.object %>
      <section class="story_title">
      <%= f.text_field :title, class: 'form-control', :placeholder => "(例) 第〇話 □□□□□" %>
      </section>
      
      <section class="story_text">
      <%= f.label :text, "本文" %>
      <%= f.text_area :text, cols: "80", rows: "80", class: 'form-control' %>
      </section>
    
      <%= f.submit "編集", class: 'btn btn-primary' %>
    <% end %> 
  </div>
</div>