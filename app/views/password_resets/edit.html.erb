<% provide(:title, "パスワードの変更") %>

<h1>パスワードの変更</h1>

<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= simple_form_for(@user, url: password_reset_path(params[:id])) do |f| %>
      <%= render 'shared/error_explanation', model: f.object %>
      
      <%= hidden_field_tag :email, @user.email %>
      
      <%= f.input :password, label: "パスワード" %>
      
      <%= f.input :password_confirmation, label: "パスワード確認" %>
      
      <%= f.submit "パスワードを更新する", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>