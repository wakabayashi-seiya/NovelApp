<% provide(:title, "小説") %>

<div class="row">
 <div class="col-md-4">
    <section class="user-name">
      <h3><%= @user.field %></h3>
      <p>@ <%= @user.name %></p>
      <p>登録日: <%= @user.created_at.strftime("%Y-%m-%d") %> </p>
    </section>
  </div>
  <div class="col-md-8">
   <p><%= simple_format @user.introduction %></p>
  </div>
  <div class="col-md-10 offset-md-1">
    <nav class="nav navbar-expand-md navbar-ligth bg-ligth">
      <ul class="navbar-nav">
        <li class="nav-item"><%= link_to "小説", colection_user_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "本棚", likes_user_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "近況ノート", recent_user_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "おすすめレビュー", comment_user_path, class: "nav-link" %></li>
      </ul>
    </nav>
  </div>
  <% if @user.novels.any? %>
    <div class="col-md-10 offset-md-1">
      <h3>小説 (<%= @user.novels.count %>)</h3>
      <ul class="novels">
        <%= render @novels %>
      </ul>
      <%= will_paginate @novels %>
    </div>
  <% end %>
</div>