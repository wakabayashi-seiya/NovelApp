<% provide(:title, @user.name) %>
<div class="row">
  <div class="col-md-4">
    <section class="user-name">
      <h3><%= @user.field %></h3>
      <p>@ <%= @user.name %></p>
      <p>登録日: <%= @user.created_at.strftime("%Y-%m-%d") %> </p>
    </section>
  </div>
  <div class="col-md-8">
   <p><%= simple_format @user.introduction %></p>
  </div>
  <div class="col-md-10 offset-md-1">
    <nav class="nav navbar-expand-md navbar-ligth bg-ligth">
      <ul class="navbar-nav">
        <li class="nav-item"><%= link_to "小説", "#user_novels", class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "本棚", "#user_favorites", class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "近況ノート", "#user_notes", class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "おすすめレビュー", "#user_reviews", class: "nav-link" %></li>
      </ul>
    </nav>
  </div>
  <div class="col-md-10 offset-md-1">
    <section id="user_novels">
      <% if @user.novels.present? %>
        <h3>小説 (<%= @user.novels.count %>)</h3>
        <ul class="novels"><%= render @novels %></ul>
        <%= will_paginate @novels %>
      <% end %>
    </section>
    <section id="user_favorites">
      <% if @user.favorites.present? %>
        <h3>本棚 (<%= @user.favorites.count %>)</h3>
        <ul class="favorites"><%= render @favorites %></ul>
        <%= will_paginate @favorites %>
      <% end %>
    </section>
    <section id="user_notes">
      <% if @user.notes.present? %>
        <h3>近況ノート (<%= @user.notes.count %>)</h3>
        <ul class="notes"><%= render @notes %></ul>
        <%= will_paginate @notes %>
      <% end %>
    </section>
    <section id="user_reviews">
      <% if @user.reviews.present? %>
        <h3>おすすめレビュー (<%= @user.reviews.count %>)</h3>
        <ul class="review_novel">
          <%= render "shared/user_review", reviews: @reviews %>
        </ul>
        <%= will_paginate @reviews %>
      <% end %>
    </section>
  </div>
</div>