<% provide(:title, "ユーザー編集") %>

<h1>ユーザー編集 <%= resource_name.to_s.humanize %></h1>
<div class="row justify-content-center">
  <div class="col-md-6">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

  　   <%= f.input :name, label: "ユーザーID", placeholder: "ユーザーID(英数字6文字以上)" %>
      
      <%= f.input :field,  label: "ペンネーム", placeholder: "好きなペンネームを入力" %>
    
      <%= f.input :email, required: true, autofocus: true, label: "メールアドレス", placeholder: "メールアドレス" %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password,
                  hint: "パスワードを変更しない場合は、入力しないでください",
                  required: false,
                  label: "新しいパスワード",
                  placeholder: "パスワード(英数字6文字以上)",
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: false,
                  label: "新しいパスワード(確認)",
                  placeholder: "確認用",
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :current_password,
                  hint: "この欄は必須です(確認のため)",
                  required: true,
                  label: "現在のパスワード", 
                  placeholder: "現在のパスワード(英数字6文字以上)",
                  input_html: { autocomplete: "current-password" } %>
                
      <%= f.input :introduction,  label: "自己紹介", as: :text  %>

      <%= f.button :submit, "更新" %>

    <% end %>

    <h3>アカウントの削除</h3>

      <p><%= link_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "本当によろしいですか？" }, method: :delete %></p>

    <%= link_to "戻る", :back %>
  </div>
</div>